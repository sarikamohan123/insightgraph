# InsightGraph Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values

# LLM Configuration (Required)
GEMINI_API_KEY=your_gemini_api_key_here
USE_LLM_EXTRACTOR=true
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Security Configuration (Phase 3)
# Set this to a secure random string to enable authentication
# Leave empty for development (all endpoints public)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=

# Database Configuration (Phase 3)
DATABASE_URL=postgresql://dev:devpass@localhost:5432/insightgraph

# Redis Configuration (Phase 2)
REDIS_URL=redis://localhost:6379
